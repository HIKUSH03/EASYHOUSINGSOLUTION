@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
        line-height: 1.6;
    }

    .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #1e1e1e;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #ffffff;
        margin-bottom: 2rem;
        font-size: 2.5rem;
    }

    .mission-vision {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-top: 2rem;
    }

    .mission-vision div {
        background-color: #1e1e1e;
        padding: 1.5rem;
        border-radius: 10px;
    }

    .mission-vision h3 {
        color: #4CAF50;
        margin-bottom: 1rem;
    }

    .company-info {
        margin-top: 2rem;
        text-align: center;
        background-color: #2d2d2d;
        padding: 2rem;
        border-radius: 10px;
    }

</style>

<div class="about-container">
    <h2>About Our Real Estate Platform</h2>

    <div class="company-info">
        <p>
            We are an innovative real estate platform dedicated to connecting buyers and sellers
            with seamless, transparent, and efficient property transactions. Our mission is to
            revolutionize the way people buy, sell, and explore real estate.
        </p>
    </div>

    <div class="mission-vision">
        <div>
            <h3>Our Mission</h3>
            <p>
                To empower individuals and businesses by providing a comprehensive, user-friendly
                platform that simplifies real estate transactions, offers deep market insights,
                and creates meaningful connections between property seekers and sellers.
            </p>
        </div>
        <div>
            <h3>Our Vision</h3>
            <p>
                To become the leading digital marketplace that transforms real estate interactions,
                leveraging cutting-edge technology to make property discovery, valuation, and
                transaction processes more transparent, accessible, and efficient.
            </p>
        </div>
    </div>
</div>