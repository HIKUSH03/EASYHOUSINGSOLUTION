@model EHSDataAccessLayer.Entity.Property

@{
    ViewBag.Title = "Delete Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Property</h2>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure you want to delete this property?</p>

<table class="table">
    <tr>
        <th>Property Name</th>
        <td>@Model.PropertyName</td>
    </tr>
    <tr>
        <th>Property Type</th>
        <td>@Model.PropertyType</td>
    </tr>
    <tr>
        <th>Property Option</th>
        <td>@Model.PropertyOption</td>
    </tr>
    <tr>
        <th>Price Range</th>
        <td>@Model.PriceRange</td>
    </tr>
    <tr>
        <th>Initial Deposit</th>
        <td>@Model.InitialDeposit</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Landmark</th>
        <td>@Model.Landmark</td>
    </tr>
</table>

@using (Html.BeginForm("DeleteConfirmed", "Seller", FormMethod.Post))
{
    @Html.HiddenFor(model => model.PropertyId)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Seller")" class="btn btn-secondary">Cancel</a>
}
