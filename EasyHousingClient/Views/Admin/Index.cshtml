@model IEnumerable<EHSDataAccessLayer.Entity.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    
    <!-- Properties Table -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <h4 class="text-center">Properties</h4>
                <table class="table table-striped table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Option</th>
                            <th>Description</th>
                            <th>Active</th>
                            <th>Price Range</th>
                            <th>Initial Deposit</th>
                            <th>Landmark</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var property in Model)
                        {
                            <tr>
                                <td>@property.PropertyId</td>
                                <td>@property.PropertyName</td>
                                <td>@property.PropertyType</td>
                                <td>@property.PropertyOption</td>
                                <td>@property.Description</td>
                                <td>@(property.IsActive ? "Yes" : "No")</td>
                                <td>@property.PriceRange</td>
                                <td>@property.InitialDeposit</td>
                                <td>@property.Landmark</td>
                                <td>@property.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div>
                <img src="~/Content/Images/d6.jpg" />
            </div>
        </div>
    }
</div>