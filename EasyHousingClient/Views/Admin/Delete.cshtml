<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
        line-height: 1.6;
    }

    .delete-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #1e1e1e;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #ffffff;
        margin-bottom: 2rem;
        font-size: 2.5rem;
    }

    h3 {
        text-align: center;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .delete-details {
        background-color: #2d2d2d;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .dl-horizontal {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 1rem;
    }

    .dl-horizontal dt {
        color: #4CAF50;
        font-weight: 500;
        text-align: right;
        padding-right: 1rem;
    }

    .dl-horizontal dd {
        color: #ffffff;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .btn-back {
        background-color: #007bff;
        color: white;
        text-decoration: none;
    }

    .btn-back:hover {
        background-color: #0056b3;
    }

