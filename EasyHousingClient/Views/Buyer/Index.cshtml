@model List<EHSDataAccessLayer.Entity.Property>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>All Properties</h2>
    <div>
        @Html.ActionLink("Sort By Price", "SortedByPrice", "Buyer", new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Search By Region", "SearchPropertyByRegion", "Buyer", new { @class = "btn btn-outline-primary" })
    </div>
</div>



@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Option</th>
                <th>Description</th>
                <th>Price Range</th>
                <th>Initial Deposit</th>
                <th>Landmark</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr class="@(property.IsActive ? "" : "d-none")">
                    <td>@property.PropertyId</td>
                    <td>@property.PropertyName</td>
                    <td>@property.PropertyType</td>
                    <td>@property.PropertyOption</td>
                    <td>@property.Description</td>
                    <td>@property.PriceRange</td>
                    <td>@property.InitialDeposit</td>
                    <td>@property.Landmark</td>
                    <td>@property.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>No properties found!</h1>
}