@model List<EHSDataAccessLayer.Entity.Property>
@{
    ViewBag.Title = "SearchPropertyByRegion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Search Property By Region</h2>
    <div>
        @Html.ActionLink("View All Properties", "Index", "Buyer", new { @class = "btn btn-outline-primary" })
    </div>
</div>


<div class="row mb-4">
    <div class="col-md-6 offset-md-3">
        <form asp-action="SearchPropertyByRegion" method="post" class="form-inline d-flex justify-content-center">
            <div class="input-group">
                <input type="text"
                       id="region"
                       name="region"
                       value="@ViewBag.Region"
                       class="form-control"
                       placeholder="Enter Region"
                       required />
                <button type="submit" class="btn btn-primary ml-2">Search</button>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center">Properties in @ViewBag.Region</h4>
            <table class="table table-striped table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Option</th>
                        <th>Description</th>
                        <th>Active</th>
                        <th>Price Range</th>
                        <th>Initial Deposit</th>
                        <th>Landmark</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model)
                    {
                        <tr>
                            <td>@property.PropertyId</td>
                            <td>@property.PropertyName</td>
                            <td>@property.PropertyType</td>
                            <td>@property.PropertyOption</td>
                            <td>@property.Description</td>
                            <td>@(property.IsActive ? "Yes" : "No")</td>
                            <td>@property.PriceRange</td>
                            <td>@property.InitialDeposit</td>
                            <td>@property.Landmark</td>
                            <td>@property.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*<div>
            <img src="~/Content/Images/d6.jpg" />
        </div>*@
    </div>
}